    "@tailwindcss/jit": "^0.1.1",
    "autoprefixer": "^10.0.4",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "file-loader": "^6.2.0",
    "html-minifier": "^4.0.0",
    "mini-css-extract-plugin": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "sharp": "^0.26.3",
    "tailwindcss": "^2.0.3",
    "webpack": "^4.44.2",
