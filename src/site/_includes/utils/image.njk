<picture class="{{ classes }}">
  <source type="image/avif"
          srcset="images/1x/{{ name }}.avif 1000w, images/1.5x/{{ name }}.avif 1.5x, images/2x/{{ name }}.avif 2x">
  <source type="image/webp"
          srcset="images/1x/{{ name }}.webp 1000w, images/1.5x/{{ name }}.webp 1.5x, images/2x/{{ name }}.webp 2x">
  <img sizes="(min-width: 80rem) 50vw, 100vw"
       srcset="images/1x/{{ name }}.jpg 1000w,
               images/1.5x/{{ name }}.jpg 1500w,
               images/2x/{{ name }}.jpg 2000w"
       src="images/1x/{{ name }}.jpg"
       alt="{{ description }}">
</picture>
