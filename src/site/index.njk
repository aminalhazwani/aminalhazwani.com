---
title: Amin Al Hazwani
layout: default
---

{% for project in collections.projects | reverse %}
  {% if project.data.layout %}
    <section class="mb-32 px-3 md:flow-root">
      <div class="px-1 md:pl-1 md:float-left md:pr-2 md:w-1/2">
        <div class="md:w-10/12 lg:w-4/5">
          <h2 class="font-normal group inline-block mb-8 text-xl md:text-2xl lg:text-3xl xl:text-4xl">
            {% if project.data.permalink %}
              <a class="underline underline-offset-0.75 md:underline-thickness-0.5 md:underline-offset-1 xl:underline-offset-1.5" href="{{ project.url }}">{{ project.data.title }}</a><span class="font-inter ml-0 opacity-0 group-hover:ml-2 group-hover:opacity-100 group-hover:transition-all">→</span>
            {% else %}
              {{ project.data.title }}
            {% endif %}
          </h2>
          <p class="mb-4 leading-snug lg:text-xl xl:text-2xl">
            {{ project.data.description }}
          </p>
        </div>
      </div>
      <div class="px-1 md:pl-2 md:float-left md:pr-1 md:w-1/2">
        {% if project.data.permalink %}
          <a class="block overflow-hidden {% include "utils/ratio.njk" %} relative" href="{{ project.url }}">
            {% set classes = "absolute h-full w-full object-cover" %}
            {% include "utils/image.njk" %}
          </a>
        {% else %}
          <div class="overflow-hidden {% include "utils/ratio.njk" %} relative">
            {% set classes = "absolute h-full w-full object-cover" %}
            {% include "utils/image.njk" %}
          </div>
        {% endif %}
      </div>
    </section>
  {% endif %}
{% endfor %}

{% for project in collections.projects | reverse %}
  {% if not project.data.layout %}
  {% if (loop.index/2) | round * 2 == loop.index %}
    <section class="{% if (loop.index+1) == loop.length %} mb-32 {% else %} mb-8 {% endif %} px-2 sm:flow-root">
      <div class="mb-8 px-1 sm:mb-0 sm:float-left sm:w-1/2">
  {% else %}
      <div class="px-1 sm:float-left sm:w-1/2">
  {% endif %}
      <div class="px-1 lg:w-1/2 lg:float-left">
        <div class="md:w-11/12">
          <h3 class="font-normal inline-block mb-4 text-base md:text-xl">
            <a href="{{ project.url }}">
              <span class="mr-1 underline underline-offset-0.5 underline-thickness-0.25 md:underline-offset-0.75 md:underline-thickness-0.25 lg:underline-thickness-0.5">{{ project.data.title }}</span><span class="font-inter">↗</span>
            </a>
          </h3>
          <p class="leading-tight mb-2 text-sm md:leading-snug md:text-base">
            {{ project.data.description }}
          </p>
        </div>
      </div>
      <div class="px-1 lg:w-1/2 lg:float-left">
        <div class="overflow-hidden {% include "utils/ratio.njk" %} relative">
          {% set classes = "absolute h-full w-full object-cover" %}
          {% include "utils/image.njk" %}
        </div>
      </div>
    </div>
    {% if (loop.index/2) | round * 2 != loop.index or loop.last %}
    </section>
  {% endif %}
  {% endif %}
{% endfor %}
